<Window x:Class="Clothing_store.cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_store"
        mc:Ignorable="d"
        Title="cart" Height="450" Width="800" MinWidth="1000" MinHeight="450" MaxWidth="800" MaxHeight="450">
    <Grid>
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Left" Margin="39,9,0,0" FontSize="20px" VerticalAlignment="Top" Width="83" Height="31" Click="back_Click"/>
        <Image x:Name="QRimg" Margin="820,130,52,156"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="Prise" HorizontalAlignment="Left" Margin="39,366,0,0" TextWrapping="Wrap" Text="Цена: " FontSize="20px" VerticalAlignment="Top"/>
            <TextBlock x:Name="coast" HorizontalAlignment="Left" Margin="5,367,0,0" TextWrapping="Wrap" Text="0" FontSize="20px" VerticalAlignment="Top"/>
        </StackPanel>
        <TextBlock x:Name="name" HorizontalAlignment="Left" Margin="844,11,0,0" TextWrapping="Wrap" Foreground="#FF115BBD"  Text="Clothing store" FontSize="20" VerticalAlignment="Top"/>

        <ListView x:Name="ListCart" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="26,50,223,50">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"></ColumnDefinition>
                            <ColumnDefinition Width="300"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Width="140" Height="140" Source="{Binding main.CurrentPhoto}"/>
                        <StackPanel Grid.Column="1" Width="180" Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Название: "/>
                                <Run Text="{Binding main.nameItem}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Цена: "/>
                                <Run Text="{Binding main.price}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="О товаре: "/>
                                <Run Text="{Binding main.infoItem}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Категория: "/>
                                <Run Text="{Binding main.categor.categor1}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Цвет: "/>
                                <Run Text="{Binding main.color1.color}"/>
                            </TextBlock>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Материал: "/>
                                <Run Text="{Binding main.material.material1}"/>
                            </TextBlock>
                        </StackPanel>
                        <ToolBarPanel Grid.Column="2"/>
                        <Button x:Name="deleteItem" Grid.Column="2" Content="Удалить" FontSize="20px" HorizontalAlignment="Left" Margin="62,0,0,0" Tag="{Binding id}" VerticalAlignment="Center" Width="128" Height="34" Click="deleteItem_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="by" Content="Оформить" HorizontalAlignment="Left" Margin="844,363,0,0" FontSize="20px" VerticalAlignment="Top" Height="32" Width="107" Click="by_Click_1"/>
    </Grid>
</Window>
